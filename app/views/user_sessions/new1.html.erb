<div class="div-login">

  <span><%=t 'views.user_sessions.login' %></span>

  <% unless flash[:notice].nil? %>
    <div class="container-notice">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <% unless flash[:alert].nil? %>
    <div class="container-alert">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= form_tag user_sessions_path do %>
    <div class="field">
      <%= label_tag :email %><br/>
      <%= text_field_tag :email, params[:email] %>
    </div>
    <div class="field">
      <%= label_tag :password, t('views.user_sessions.password') %><br/>
      <%= password_field_tag :password %>
    </div>
    <div class="options">
      <%= check_box_tag :remember_me, 1, params[:remember_me] %>
      <%= label_tag :remember_me, t('views.user_sessions.remember_me') %>
    </div>
    <div class="login_actions">
      <%= submit_tag t('views.user_sessions.login') %>
      <br/>
      <%= link_to t('views.user_sessions.reset_password'), new_password_reset_path %>
    </div>
  <% end %>

</div>
