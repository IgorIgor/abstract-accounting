
<label><%=t 'views.allocations.created_at' %></label>
<input type="text" id="filter_created_at" data-bind="value: filter.created"/>
<label><%=t 'views.allocations.foreman' %></label>
<input type="text" id="filter_foreman" data-bind="value: filter.foreman"/>
<label><%=t 'views.allocations.storekeeper' %></label>
<input type="text" id="filter_storekeeper" data-bind="value: filter.storekeeper"/>
<label><%=t 'views.allocations.storekeeper_place' %></label>
<input type="text" id="filter_storekeeper_place" data-bind="value: filter.storekeeper_place"/>
<label><%=t 'views.statable.state' %></label>
<select id="filter_state" data-bind="value: filter.state">
  <option value=""></option>
  <option value="<%= Statable::INWORK %>"><%=t 'views.statable.inwork' %></option>
  <option value="<%= Statable::CANCELED %>"><%=t 'views.statable.canceled' %></option>
  <option value="<%= Statable::APPLIED %>"><%=t 'views.statable.applied' %></option>
  <option value="<%= Statable::REVERSED %>"><%=t 'views.statable.reversed' %></option>
</select>
<label><%=t 'views.allocations.resource.name' %></label>
<input type="text" id="filter_resource" data-bind="value: filter.resource_tag"/>
