<form data-bind="validate: { success: save }">
  <div class='actions'>
    <input type='submit' value="<%= t('views.allocations.save') %>"
           data-bind='visible: !readonly()'/>
    <input type='button' value="<%= t('views.allocations.draft') %>"
           data-bind='visible: !readonly()'/>
    <input type='button' value="<%= t('views.allocations.back') %>"
           data-bind='click: back'/>
    <div class='buttons-separator' data-bind='visible: readonly'></div>
    <input type='button' value="<%= t('views.allocations.apply') %>"
           data-bind='click: apply, visible: readonly && object.can_apply()'/>
    <input type='button' value="<%= t('views.allocations.cancel') %>"
           data-bind='click: cancel, visible: readonly && object.can_cancel()'/>
    <input type='button' value="<%= t('views.allocations.print') %>"
           data-bind='click: print, visible: readonly'/>
  </div>

  <span id="page-title">
  <!-- ko if: readonly -->
    <%= t('views.allocations.page_title_show') %>
  <!-- /ko -->
  <!-- ko ifnot: readonly -->
    <%= t('views.allocations.page_title_new') %>
  <!-- /ko -->
  </span>

  <%= render 'home/errors' %>

  <fieldset>
    <div>
      <div>
        <span class="form-cell-label">
          <label for="created"><%= t 'views.allocations.created_at' %>:</label>
        </span>
        <span>
          <input type="text" id="created" rule="required"
                 name="<%= t 'views.allocations.created_at' %>"
                 data-bind="datepicker: object.allocation.created, disable: readonly">
        </span>
      </div>
      <!-- ko if: readonly -->
      <div>
        <span class="form-cell-label">
          <label for="state"><%= t 'views.statable.state' %>:</label>
        </span>
        <span>
          <input type="text" id="state" disabled="disabled"
                 data-bind="value: getState(object.allocation.state())">
        </span>
      </div>
      <!-- /ko -->
    </div>
  </fieldset>

  <fieldset>
    <legend><%= t 'views.allocations.storekeeper' %></legend>
    <div>
      <div>
        <span class="form-cell-label">
          <label for="storekeeper_entity"><%= t 'views.allocations.entity' %>:</label>
        </span>
        <span data-bind='with: object.storekeeper'>
          <input type='text' id='storekeeper_entity'
                 name='<%= t 'views.allocations.storekeeper' %>' rule='required'
                 data-bind="autocomplete: {
                              source: '/storekeepers.json?document_type=<%= Allocation.name %>',
                              value: 'tag',
                              bind: {
                                id: $parent.object.allocation.storekeeper_id,
                                place: {
                                  id: $parent.object.allocation.storekeeper_place_id,
                                  tag: $parent.object.storekeeper_place.tag,
                                }
                              },
                              onlySelect: true,
                              afterChange: $parent.loadAvailableResources
                            }, value: tag, disable: $parent.disable_storekeeper" />
        </span>
      </div>
      <div>
        <span class="form-cell-label">
          <label for="storekeeper_place"><%= t 'views.allocations.place' %>:</label>
        </span>
        <span data-bind='with: object.storekeeper_place'>
          <input type='text' id='storekeeper_place'
                 name='<%= t 'views.allocations.storekeeper_place' %>' rule='required'
                 data-bind="value: tag" disabled="disabled" />
        </span>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <legend><%= t 'views.allocations.foreman' %></legend>
    <div>
      <div>
        <span class="form-cell-label">
          <label for="foreman_entity"><%= t 'views.allocations.entity' %>:</label>
        </span>
        <span data-bind='with: object.foreman'>
          <input type='text' id='foreman_entity'
                 name='<%= t 'views.allocations.foreman' %>' rule='required'
                 data-bind="autocomplete: {
                              source: '/entities.json',
                              value: 'tag',
                              bind: { id: $parent.object.allocation.foreman_id }
                            }, value: tag, disable: $parent.readonly" />
        </span>
      </div>
      <div>
        <span class="form-cell-label">
          <label for="foreman_place"><%= t 'views.allocations.place' %>:</label>
        </span>
        <span data-bind='with: object.foreman_place'>
          <input type='text' id='foreman_place'
                 name='<%= t 'views.allocations.foreman_place' %>' rule='required'
                 data-bind="autocomplete: {
                              source: '/places.json',
                              value: 'tag',
                              bind: { id: $parent.object.allocation.foreman_place_id }
                            }, value: tag, disable: $parent.readonly" />
        </span>
      </div>
    </div>
  </fieldset>

  <table id="selected-resources">
    <caption><%= t 'views.allocations.selected_resources' %></caption>
    <thead>
    <tr>
      <!-- ko ifnot: readonly -->
      <th class="allocation-actions"></th>
      <!-- /ko -->
      <th class="selected-resources-tag"><%= t 'views.allocations.tag' %></th>
      <th class="selected-resources-mu"><%= t 'views.allocations.mu' %></th>
      <!-- ko ifnot: readonly -->
      <th class="selected-resources-exp-amount">
        <%= t 'views.allocations.expectation_amount' %>
      </th>
      <!-- /ko -->
      <th class="selected-resources-count"><%= t 'views.allocations.amount' %></th>
    </tr>
    </thead>
    <tbody data-bind="foreach: object.items">
    <tr>
      <!-- ko ifnot: $parent.readonly -->
      <td class="allocation-actions">
        <span class="mini-icon delete" data-bind="click: $parent.unselectResource"></span>
      </td>
      <!-- /ko -->
      <td data-bind="text: tag"></td>
      <td data-bind="text: mu"></td>
      <!-- ko ifnot: $parent.readonly -->
      <td data-bind="text: exp_amount"></td>
      <!-- /ko -->
      <td>
        <input type="text" size="8"
               data-bind="value: amount, disable: $parent.readonly" />
      </td>
    </tr>
    </tbody>
  </table>

  <!-- ko ifnot: readonly -->

  <!-- ko if: availableMode() == '0' -->
  <table id="available-resources">
    <caption>
      <div class="table-mode">
        <input type="radio" id="mode-resources" name="mode" value="0"
               data-bind="checked: availableMode"/>
        <label for="mode-resources">
          <%= t 'views.allocations.by_resource' %>
        </label>
        <input type="radio" id="mode-waybills" name="mode" value="1"
               data-bind="checked: availableMode"/>
        <label for="mode-waybills">
          <%= t 'views.allocations.by_waybills' %>
        </label>
      </div>
      <%= t 'views.allocations.available_resources' %>
      <%= render 'home/paginate' %>
    </caption>
    <thead>
    <tr>
      <th class="allocation-actions"></th>
      <th class="available-resources-tag"><%= t 'views.allocations.tag' %></th>
      <th class="available-resources-mu"><%= t 'views.allocations.mu' %></th>
      <th class="available-resources-exp-amount">
        <%= t 'views.allocations.expectation_amount' %>
      </th>
    </tr>
    </thead>
    <tbody data-bind="foreach: availableResources">
    <tr>
      <td class="allocation-actions">
        <span class="mini-icon add" data-bind="click: $parent.selectResource"></span>
      </td>
      <td data-bind="text: tag"></td>
      <td data-bind="text: mu"></td>
      <td data-bind="text: exp_amount"></td>
    </tr>
    </tbody>
  </table>
  <!-- /ko -->

  <!-- ko if: availableMode() == '1' -->
  <table id="available-resources-by-wb">
    <caption>
      <div class="table-mode">
        <input type="radio" id="mode-resources-by-wb" name="mode-by-wb"
               value="0" data-bind="checked: availableMode"/>
        <label for="mode-resources-by-wb">
          <%= t 'views.allocations.by_resource' %>
        </label>
        <input type="radio" id="mode-waybills-by-wb" name="mode-by-wb"
               value="1" data-bind="checked: availableMode"/>
        <label for="mode-waybills-by-wb">
          <%= t 'views.allocations.by_waybills' %>
        </label>
      </div>
      <%= t 'views.allocations.available_resources' %>
    </caption>
    <thead>
    <tr>
      <th></th>
      <th></th>
      <th><%= t 'views.allocations.document_id' %></th>
      <th><%= t 'views.allocations.created_at' %></th>
      <th><%= t 'views.allocations.distributor' %></th>
      <th><%= t 'views.allocations.storekeeper' %></th>
      <th><%= t 'views.allocations.storekeeper_place' %></th>
    </tr>
    </thead>
    <tbody data-bind="foreach: availableResources">
    <tr>
      <td class="allocation-actions-by-wb">
        <span class="mini-icon add" data-bind="click: $parent.selectWaybill"></span>
      </td>
      <td data-bind="click: $parent.treeMapping" class="allocation-tree-actions-by-wb">
        <div class="ui-corner-all ui-state-hover">
          <span class="ui-icon ui-icon-circle-plus"></span>
        </div>
      </td>
      <td data-bind="text: document_id"></td>
      <td data-bind="text: created"></td>
      <td data-bind="text: distributor"></td>
      <td data-bind="text: storekeeper"></td>
      <td data-bind="text: storekeeper_place"></td>
    </tr>
    <!-- ko if: resources.show -->
    <tr>
      <td></td>
      <td colspan="6">
        <table>
          <thead>
          <tr>
            <th class="available-resources-tag"><%= t 'views.allocations.tag' %></th>
            <th class="available-resources-mu"><%= t 'views.allocations.mu' %></th>
            <th class="available-resources-amount"><%= t 'views.allocations.amount' %></th>
          </tr>
          </thead>
          <tbody data-bind="foreach: resources.items">
          <tr>
            <td data-bind="text: tag"></td>
            <td data-bind="text: mu"></td>
            <td data-bind="text: amount"></td>
          </tr>
          </tbody>
        </table>
      </td>
    </tr>
    <!-- /ko -->
    </tbody>
  </table>
  <!-- /ko -->

  <!-- /ko -->

  <div class="clear-div"></div>

</form>
