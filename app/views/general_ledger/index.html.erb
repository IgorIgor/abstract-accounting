<div class="left">
  <label for="general_ledger_date"><%= t 'views.balance_sheet.date' %>:</label>
  <input type="text" id="general_ledger_date"
         data-bind="datepicker:{ value: date, maxDate: '+0'}, event: {change: filter}">
</div>
<div class="clear"></div>
<table>
  <thead>
    <tr>
      <th id="day" data-bind="click: sortBy">
        <%=t 'views.general_ledger.date'%><span></span>
      </th>
      <th id="resource" data-bind="click: sortBy">
        <%=t 'views.general_ledger.resource'%><span></span>
      </th>
      <th id="amount" data-bind="click: sortBy">
        <%=t 'views.general_ledger.amount'%><span></span>
      </th>
      <th><%=t 'views.general_ledger.type' %></th>
      <th><%=t 'views.general_ledger.account' %></th>
      <th><%=t 'views.general_ledger.price' %></th>
      <th><%=t 'views.general_ledger.debit' %></th>
      <th><%=t 'views.general_ledger.credit' %></th>
    </tr>
  </thead>
  <tbody data-bind="foreach: documents">
    <tr data-bind="click: $parent.toTranscript">
      <td data-bind="text: day"></td>
      <td data-bind="text: resource"></td>
      <td data-bind="text: amount"></td>
      <td data-bind="text: type_debit"></td>
      <td data-bind="text: account_debit"></td>
      <td data-bind="text: price_debit"></td>
      <td data-bind="text: debit_debit"></td>
      <td></td>
    </tr>
    <tr data-bind="click: $parent.toTranscript">
      <td></td>
      <td></td>
      <td></td>
      <td data-bind="text: type_credit"></td>
      <td data-bind="text: account_credit"></td>
      <td data-bind="text: price_credit"></td>
      <td></td>
      <td data-bind="text: credit_credit"></td>
    </tr>
  </tbody>
</table>
