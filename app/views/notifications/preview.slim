form data-bind="validate: { success: save }"
  .actions
    = render :partial => "home/buttons", :locals => { :editable => false }

  = render 'home/errors'

  fieldset
    legend = t 'views.user_notification.tag'
    div
      label for="title"
        = t('views.user_notification.title')
        | :
      input#title[type="text" name="#{t('views.user_notification.title')}"
                  rule='required' data-bind="value: object.notification.title, \
                                             disable: readonly"]
    div
      label for="message"
        = t('views.user_notification.message')
        | :
      textarea#message[name="#{t('views.user_notification.message')}" rule='required'
                       data-bind="value: object.notification.message, disable: readonly"
                       rows='10']
    div
      label for="notification_type"
        = t('views.user_notification.type.tag')
        | :
      select#notification_type[name='#{t('views.user_notification.type.tag')}'
                               data-bind="value: object.notification.notification_type, \
                                          disable: readonly"]
        option value="#{Notification::INFORMATION}"
          = t('views.user_notification.type.information')
        option value="#{Notification::WARNING}"
          = t('views.user_notification.type.warning')
    /! ko if: readonly
    div
      label for="title"
        = t('views.user_notification.date')
        | :
      input#date[type="text" name="#{t('views.user_notification.date')}" rule='required'
                 data-bind="value: object.notification.date, disable: readonly"]
    /! /ko
