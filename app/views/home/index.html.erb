<div id="header">
  <div class="div-logout"><%= link_to t('views.home.logout'), :logout %></div>
  <% if current_user.root? %>
    <div class="div-logout"><a href="#settings"><%=t 'views.home.settings' %></a></div>
  <% end %>
  <div>
    <span>
      <%= current_user.root? ? current_user.email : current_user.entity.tag %>
    </span>
  </div>
</div>

<div id="body">
  <div id='nav'>
    <div class='filter'>
      <div class='filter-bar'>
        <input type='text' value=''/>
        <div id='show-filter'
             data-bind="slidemenu: { control: 'show-filter', list: 'filter-area',
                                     stuck: true }">
          <div class='arrow_down'></div>
        </div>
      </div>
      <input type='button' value="<%=t 'views.home.search' %>"/>
    </div>
  </div>

  <div id="sidebar">
    <div class="button_drop_down_list"
         data-bind="slidemenu: { control: 'btn_create', list: 'documents_list' } ">
      <a id="btn_create"><%=t 'views.home.create' %>
        <div class="arrow_down"></div>
      </a>
      <ul id='documents_list'>
        <% @types.each do |type| %>
          <li>
            <%= link_to(t("views.home.#{type.underscore}"),
                       "#documents#{send("new_#{type.underscore}_path")}") %>
          </li>
        <% end %>
      </ul>
    </div>
    <br />

    <ul>
      <li id="inbox"><a href="#inbox"><%=t 'views.home.inbox' %></a></li>
      <li><a><%=t 'views.home.starred' %></a></li>
      <li><a><%=t 'views.home.drafts' %></a></li>
      <li><a><%=t 'views.home.sent' %></a></li>
      <li><a><%=t 'views.home.trash' %></a></li>
      <li id="archive"><a href="#archive"><%=t 'views.home.archive' %></a></li>
      <hr>
    </ul>

    <div class="slider">
      <div id="arrow_lists" class="arrow-down-slide"></div>
      <a id="btn_slide_lists" class="btn-slide" data-bind="click: slideLists">
        <%=t 'views.home.lists' %>
      </a>
      <ul id="slide_menu_lists" class="slide_menu" style="display: none;">
        <% if current_user.root? %>
          <li id="users"><a href="#users"><%=t 'views.home.users' %></a></li>
          <li id="groups"><a href="#groups"><%=t 'views.home.groups' %></a></li>
          <li id="assets"><a href="#assets"><%=t 'views.home.assets' %></a></li>
          <li id="entities"><a href="#entities"><%=t 'views.home.entities' %></a></li>
          <li id="places"><a href="#places"><%=t 'views.home.places' %></a></li>
          <div class="slide_action">
            <div id="arrow_actions" class="arrow-expand arrow-right-expand"></div>
            <a href="#deals" id="deals" class="btn_slide_action"
               data-bind="click: expand"><%=t 'views.home.deals' %></a>
          </div>
          <ul id="slide_menu_deals" class="slide_menu" style="display: none;">
            <li id="waybills"><a href="#waybills"><%=t 'views.home.waybills' %></a></li>
            <li id="allocations">
              <a href="#allocations"><%=t 'views.home.allocations' %></a>
            </li>
          </ul>
        <% else %>
          <li id="waybills"><a href="#waybills"><%=t 'views.home.waybills' %></a></li>
          <li id="allocations">
            <a href="#allocations"><%=t 'views.home.allocations' %></a>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="slider">
      <div id="arrow_conditions" class="arrow-down-slide"></div>
      <a id="btn_slide_conditions" class="btn-slide" data-bind="click: slideConditions">
        <%=t 'views.home.conditions' %>
      </a>
      <ul id="slide_menu_conditions" class="slide_menu" style="display: none;">
        <li id="warehouses">
          <a href="#warehouses"><%=t 'views.home.warehouses' %></a>
        </li>
        <% if current_user.root? %>
          <li id="general_ledger">
            <a href="#general_ledger"><%=t 'views.home.general_ledger' %></a>
          </li>
          <li id="balance_sheet">
            <a href="#balance_sheet"><%=t 'views.home.balance_sheet' %></a>
          </li>
          <li id="transcripts">
            <a href="#transcripts"><%=t 'views.home.transcripts' %></a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div id="main">
  <div class="operations"><%= render 'paginate' %></div>
  <div id="container_documents"></div>
  <div class="operations"><%= render 'paginate' %></div>
</div>
