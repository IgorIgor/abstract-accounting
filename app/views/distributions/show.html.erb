<html>
<head>
  <meta http-equiv='Content-Type' content='text/html; charset=UTF-8' />
  <%= wicked_pdf_stylesheet_link_tag 'pdf' %>
</head>
<body>
  <div id='pdf-wrapper'>
    <ul id='person-list'>
      <li>
        <span class='name_element'>Storekeeper:</span>
        <span class='description_element'><%= @distribution.storekeeper.tag %></span>
      </li>
      <li>
        <span class='name_element'>Foreman:</span>
        <span class='description_element'><%= @distribution.foreman.tag %></span>
      </li>
    </ul>
    <table class='distributions'>
      <thead>
        <tr>
          <th>Tag</th>
          <th>Mu</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
        <% @distribution.items.each { |item| %>
          <tr>
            <td><%= item.resource.tag %></td>
            <td><%= item.resource.mu %></td>
            <td><%= item.amount %></td>
          </tr>
        <% } %>
      </tbody>
    </table>
    <div class='date-block'>
      <span class='date-write'><%= @distribution.created.strftime('%Y-%m-%d') %></span>
    </div>
    <div id='signature'>
      <ul>
        <li>
          <span class='autograph'>&nbsp;</span>
          <span class='fio'><%=@distribution.storekeeper.tag %></span>
        </li>
        <li>
          <span class='autograph'>&nbsp;</span>
          <span class='fio'><%=@distribution.foreman.tag %></span>
        </li>
      </ul>
    </div>
  </div>
</body>
</html>
