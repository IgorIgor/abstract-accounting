
<% if can? :manage, model %>
<input type='button' value="<%= t('views.statable.buttons.apply') %>"
       data-bind='click: apply, visible: readonly() && object.state.can_apply()'/>
<input type='button' value="<%= t('views.statable.buttons.cancel') %>"
       data-bind='click: cancel, visible: readonly() && object.state.can_cancel()'/>
<% end %>
<% if can? :reverse, model %>
<input type='button' value="<%= t('views.statable.buttons.reverse') %>"
       data-bind='click: reverse, visible: readonly() && object.state.can_reverse()'/>
<% end %>
