<table>
  <thead>
    <tr>
      <th id="tag" data-bind="click: sortBy">
        <%= t 'views.resources.tag' %><span></span>
      </th>
      <th id="ext_info" data-bind="click: sortBy">
        <%= t 'views.resources.ext_info' %><span></span>
      </th>
      <th id="type" data-bind="click: sortBy">
        <%= t 'views.resources.type' %><span></span>
      </th>
    </tr>
  </thead>
  <tbody data-bind="foreach: documents">
    <tr>
      <td data-bind="text: tag, click: $parent.showBalances"></td>
      <td data-bind="text: ext_info, click: $parent.showBalances"></td>
      <td data-bind="text: type, click: $parent.showBalances"></td>
    </tr>
  </tbody>
</table>
