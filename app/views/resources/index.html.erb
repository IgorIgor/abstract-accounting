<div class='actions with-padding'>
  <input type="button"
         value="<%= t 'views.resources.report_on_selected' %>"
         id="report_on_selected"
         data-bind="click: showBalances,  disable: selected().length == 0" />
</div>
<table>
  <thead>
    <tr>
      <th></th>
      <th id="tag" data-bind="click: sortBy">
        <%= t 'views.resources.tag' %><span></span>
      </th>
      <th id="ext_info" data-bind="click: sortBy">
        <%= t 'views.resources.ext_info' %><span></span>
      </th>
      <th id="type" data-bind="click: sortBy">
        <%= t 'views.resources.type' %><span></span>
      </th>
    </tr>
  </thead>
  <tbody data-bind="foreach: documents">
    <tr>
      <td class="cell-checkbox">
        <input type="checkbox"
               data-bind="attr: { itemType: klass, value: id },
                            polymorphic_checked: $parent.selected" />
      </td>
      <td data-bind="text: tag, click: $parent.show"></td>
      <td data-bind="text: ext_info, click: $parent.show"></td>
      <td data-bind="text: type, click: $parent.show"></td>
    </tr>
  </tbody>
</table>
